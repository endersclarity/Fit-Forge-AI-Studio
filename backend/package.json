{
  "name": "fitforge-backend",
  "version": "1.0.0",
  "description": "FitForge local backend API with SQLite",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && shx mkdir -p dist/database/migrations && shx cp database/schema.sql dist/database/ && shx cp -r database/migrations dist/database/",
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "dev:watch": "nodemon --exec ts-node server.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fitness",
    "workout",
    "tracker"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "nodemon": "^3.0.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
